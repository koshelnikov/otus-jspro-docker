{
  "name": "nodejs-docker",
  "private": true,
  "version": "1.0.0",
  "description": "NodeJS + docker example",
  "main": "index.js",
  "scripts": {
    "build": "tsc && npm run copy:views",
    "copy:views": "npx copyfiles -u 1 src/views/**/*.ejs build/",
    "start": "ts-node ./src/index.ts",
    "start:dev": "ts-node-dev ./src/index.ts",
    "test": "jest"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.9",
    "express": "^4.19.2",
    "jest": "^29.7.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.4",
    "copyfiles": "^2.4.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.4"
  }
}
